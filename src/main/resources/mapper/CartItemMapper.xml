<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smallnine.apiserver.dao.CartItemDao">

    <resultMap id="CartItemResultMap" type="com.smallnine.apiserver.entity.CartItem">
        <id property="id" column="id" />
        <result property="memberId" column="member_id" />
        <result property="productId" column="product_id" />
        <result property="quantity" column="quantity" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <sql id="BaseColumns">
        id, member_id, product_id, quantity, created_at, updated_at
    </sql>

    <!-- 根據ID查詢購物車項目 -->
    <select id="findById" resultMap="CartItemResultMap">
        SELECT <include refid="BaseColumns" />
        FROM cart_items
        WHERE id = #{id}
    </select>

    <!-- 根據用戶ID查詢購物車項目 -->
    <select id="findByMemberId" resultMap="CartItemResultMap">
        SELECT <include refid="BaseColumns" />
        FROM cart_items
        WHERE member_id = #{memberId}
        ORDER BY created_at DESC
    </select>

    <!-- 根據用戶ID和商品ID查詢購物車項目 -->
    <select id="findByMemberIdAndProductId" resultMap="CartItemResultMap">
        SELECT <include refid="BaseColumns" />
        FROM cart_items
        WHERE member_id = #{memberId} AND product_id = #{productId}
    </select>

    <!-- 創建購物車項目 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cart_items (
            member_id, product_id, quantity, created_at, updated_at
        ) VALUES (
            #{memberId}, #{productId}, #{quantity}, NOW(), NOW()
        )
    </insert>

    <!-- 更新購物車項目 -->
    <update id="update">
        UPDATE cart_items SET
            quantity = #{quantity},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 根據ID刪除購物車項目 -->
    <delete id="deleteById">
        DELETE FROM cart_items WHERE id = #{id}
    </delete>

    <!-- 根據用戶ID刪除所有購物車項目 -->
    <delete id="deleteByMemberId">
        DELETE FROM cart_items WHERE member_id = #{memberId}
    </delete>

    <!-- 根據用戶ID和商品ID刪除購物車項目 -->
    <delete id="deleteByMemberIdAndProductId">
        DELETE FROM cart_items 
        WHERE member_id = #{memberId} AND product_id = #{productId}
    </delete>

    <!-- 統計用戶購物車項目數量 -->
    <select id="countByMemberId" resultType="long">
        SELECT COUNT(*) FROM cart_items WHERE member_id = #{memberId}
    </select>

</mapper>